<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/play_button"
        android:layout_width="@dimen/chart_toolbar_button_width"
        android:layout_height="@dimen/chart_toolbar_button_height"
        android:layout_marginRight="@dimen/chart_toolbar_button_margin"
        android:layout_marginEnd="@dimen/chart_toolbar_button_margin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_play"
        android:background="?attr/selectableItemBackgroundBorderless"
        />

    <ImageButton
        android:id="@+id/refresh_button"
        android:layout_width="@dimen/chart_toolbar_button_width"
        android:layout_height="@dimen/chart_toolbar_button_height"
        android:layout_toLeftOf="@id/play_button"
        android:layout_toStartOf="@id/play_button"
        android:src="@drawable/ic_refresh"
        android:background="?attr/selectableItemBackgroundBorderless"
        />
</RelativeLayout>